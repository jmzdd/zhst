/* pages/profile/profile.wxss */

.loginapp {
    height: 400rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position:relative;
}

.loginapp .tologin {
    color: #4CD392;
    background-color: #fff;
    border-radius: 50rpx;
    font-style: 50rpx;
    height: 100rpx;
    line-height: 100rpx;
    width: 250rpx;
    text-align: center;
}

.loginapp image {
    position: absolute;
    z-index: -1;
    width: 100%;
    height: 100%;
    display: flex;
}

.items-list {
    margin-top: 50rpx;
    
}

/* 我的资料 */
.myself {
    padding-left: 40rpx;
    padding-right: 40rpx;
    display:flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 50rpx;

}

.myself .title {
    font-weight: bold;
    font-size: 35rpx;
    align-items: center;
}

.items-list .text {
    color: #C7C7C7;
    display: flex;
    font-size: 35rpx;
    align-items: center;
}

.items-list .arrow {
    width: 20rpx;
    height: 20rpx;
    border-right: 4rpx solid #c7c7c7;
    border-bottom: 4rpx solid #c7c7c7;
    transform: rotate(-45deg);
    margin-left: 15rpx;
    align-items: center;
}

/* 积分银行 */
.bank {
    padding-right: 40rpx;
    display:flex;
    align-items: center;
    margin-bottom: 50rpx;
}

.items-list .bank-icon {
    width: 70rpx;
    height: 70rpx;
    padding-left: 40rpx;
    margin-right: 30rpx;
    align-items: center;
}

.bank .word{
    display: flex;
    align-items: center;
}

.word .word-bank {
    font-size: 35rpx;
    font-weight: bold;
    align-items: center;
    margin-right: 260rpx;
}

/* 历史记录 */
.history {
    padding-right: 40rpx;
    display:flex;
    align-items: center;
    margin-bottom: 50rpx;
}

.history .history-icon {
    width: 70rpx;
    height: 70rpx;
    padding-left: 40rpx;
    margin-right: 30rpx;
    align-items: center;
}

.history .word {
    display: flex;
    align-items: center;
}

.word .word-history {
    font-size: 35rpx;
    font-weight: bold;
    align-items: center;
    margin-right: 260rpx;
}

/* 关于 */
.about {
    padding-right: 40rpx;
    display:flex;
    align-items: center;
    margin-bottom: 50rpx;
}

.about .about-icon {
    width: 65rpx;
    height: 65rpx;
    padding-left: 45rpx;
    margin-right: 30rpx;
    align-items: center;
}

.about .word {
    display: flex;
    align-items: center;
}

.word .word-about {
    font-size: 35rpx;
    font-weight: bold;
    align-items: center;
    margin-right: 330rpx;
}

/* 软件版本号 */
.version {
    position: absolute;
    bottom: 30rpx;
    color: #787878;
    font-size: 25rpx;
    width: 100%;
    text-align: center;
}